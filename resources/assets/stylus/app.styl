primary_backgroud_color = #f5f5f1

naked_link()
  color inherit
  text-decoration none
  &:hover
    text-decoration underline

background_link()
  color inherit
  text-decoration none
  &:hover
    background-color lighten(#e2e2e2, 3%)


body
  background-color primary_backgroud_color

.container
  lost-center 75%

.shows
  lost-row 1/1

.show
  lost-waffle 1/5
  position relative;
  text-align center;
  padding-top 10px
  padding-bottom 10px
  background_link()
  a
    naked_link()

.button
  display inline-block
  text-align center
  line-height 1
  cursor pointer
  -webkit-appearance none
  transition background-color 0.25s ease-out, color 0.25s ease-out
  vertical-align middle
  border 1px solid transparent
  border-radius 0
  padding 0.85em 1em
  margin 0 0 1rem 0
  font-size 0.9rem
  background-color #2199e8
  color #fefefe
  text-decoration none
  &:hover
    background-color lighten(#2199e8, 20%)

.left
  float left

.right
  float right

.shows-navigation
  lost-waffle 1/1
  padding-top 30px

.schedule-hour
  lost-waffle 1/1
  text-align center

.schedule-container
  background-color lighten(#e2e2e2, 30%)
  lost-waffle 1/1
  lost-row 1/1
  padding 15px 15px 15px 15px

.navigation
  width 100%
  min-height 50px
  margin-bottom 20px
  border 1px solid transparent

.nav
  list-style-type none
  margin 0
  padding 0
  overflow hidden
  background-color #333
  div
    float left
  a
    display block
    color white
    text-align center
    padding 14px 16px
    text-decoration none
    &:hover:not(.active)
      background-color #111

.nav-search
  margin 0;
  padding 14px 16px;

.active
  background-color: #4CAF50;

.season
  lost-waffle 1/1
  text-align center

.episode-container
  background-color lighten(#e2e2e2, 30%)
  lost-waffle 1/1
  lost-row 1/1
  padding 15px 15px 15px 15px

.show-info
  background-color lighten(#e2e2e2, 30%)
  lost-waffle 1/1
  lost-row 1/1
  padding 15px 15px 15px 15px